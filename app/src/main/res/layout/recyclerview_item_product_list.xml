<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/recyclerview_item_product_list_imageview"
        app:layout_widthPercent="100%"
        app:layout_aspectRatio="100%"
        android:background="@drawable/recyclerview_item_product_list_imageview_background"/>

    <TextView
        android:id="@+id/recyclerview_item_product_list_textview_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerview_item_product_list_imageview"
        android:gravity="center"/>
</android.support.percent.PercentRelativeLayout>